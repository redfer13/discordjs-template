{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"no-empty-function": "error",
		"no-lonely-if": "error",
		"no-shadow": ["error", { "allow": ["err", "resolve", "reject"] }],
		"no-var": "error",
		"prefer-const": "error",
		"yoda": "error"
	}
}
